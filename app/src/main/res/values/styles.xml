<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewExtraBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urbanist_extra_bold</item>
    </style>

    <style name="TextViewSemiBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urbanist_semi_bold</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="ButtonNormalAppearance">
        <item name="android:background">@drawable/bg_btn_rounded</item>
        <item name="fontFamily">@font/urbanist_extra_bold</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>